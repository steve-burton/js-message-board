{{yield}}
<h2>Ask a new question</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author name</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="ask">Question</label>
      {{input value=ask id="ask" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes" class="form-control"}}
    </div>

    <button  class="btn"{{action 'saveQuestion'}}>Save</button>
  </form>
</div>
<button class="btn trans-white"> {{#link-to 'index'}}Return home{{/link-to}}</button>
