{{yield}}
<div class="question-detail">
  <br><p class="author">{{question.author}} asked:</p>
  <h3>{{question.ask}}</h3>
  <p class="notes">Notes: {{question.notes}}</p><br>
</div>
<div class="answer-entry">
  {{#each question.answers as |answer|}}
    {{answer-tile answer=answer}}
  {{/each}}
</div>
<button class="btn btn-danger" {{action 'delete' blog}}>Delete question</button>
