{{yield}}
{{#if updateQuestionForm}}
  <h3>Update {{question.ask}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author name</label>
        {{input value=author id="author" placeholder=question.author class="form-control"}}
      </div>

      <div class="form-group">
        <label for="ask">Question</label>
        {{input value=ask id="ask" placeholder=question.ask class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" placeholder=question.notes class="form-control"}}
      </div>

      <button  class="btn" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button  class="btn"{{action 'updateQuestionForm'}}>Update</button>
{{/if}}
